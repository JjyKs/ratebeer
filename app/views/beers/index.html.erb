<h1>Listing beers</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
    <th> <%= link_to 'Style', beers_path(order:"style") %> </th>
    <th> <%= link_to 'Brewery', beers_path(order:"brewery") %> </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.style.name %></td>
        <td><%= link_to beer.brewery.name, beer.brewery, class:'btn btn-primary'%></td>
        <td><%= link_to 'Show', beer, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New Beer', new_beer_path, class:'btn btn-primary') if current_user %>

